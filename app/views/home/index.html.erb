<div class="text-center">
  <%  if user_signed_in? %>

    <h1 class="m-2">members feed</h1>

    <%= Post.find_each do |post| %> 
      <div class="card card-small mx-auto m-4" style="width: 25rem;">
        <img src=<%= "https://picsum.photos/300/200?random=#{post.id}" %> class="card-img-top">
        <div class="card-body">
          <h5 class="card-title"><%= link_to post.title, post %></h5>
          <p class="card-text">by <%= post.user.username %> <%= time_ago_in_words(post.created_at) %> ago</p>
        </div>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to "Create Post", new_post_path, class: "btn btn-primary" %>
    </div>

  <%  else %>
    <h1>Feed for Members Only</h1>
    <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Log In", new_user_session_path, class: "btn btn-outline-primary" %>
  <% end %>
</div>
